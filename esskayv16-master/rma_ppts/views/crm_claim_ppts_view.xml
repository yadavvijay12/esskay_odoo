<?xml version="1.0"?>
<odoo>

    <record model="ir.ui.view" id="crm_claims_ppts_tree_view">
        <field name="name">CRM - Claims ppts Tree</field>
        <field name="model">crm.claim.ppts</field>
        <field name="arch" type="xml">
            <tree sample="1">
                <field name="code"/>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="user_id" widget="many2one_avatar_user"/>
                <field name="date"/>
                <field name="state" decoration-success="state == 'process'" decoration-info="state == 'draft' or state == 'approve'" decoration-warning="state == 'reject'" widget="badge"/>
                <field name="date_action_next"/>
                <field name="action_next"/>
                <field name="date_deadline" invisible="1"/>
                <field name="date_closed" invisible="1"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="crm_claims_ppts_form_view">
        <field name="name">CRM - Claims ppts Form</field>
        <field name="model">crm.claim.ppts</field>
        <field name="arch" type="xml">
            <form string="Claim">
                <header>
                    <button type="object" name="action_rma_send" class="oe_highlight" string="Send RMA By Mail"
                        attrs="{'invisible':[('rma_send','=',True)]}"/>
                    <button type="object" name="action_rma_send" string="Send RMA By Mail"
                        attrs="{'invisible':[('rma_send','=',False)]}"/>
                    <button type="object" name="approve_claim" states="draft" string="Approve" class="oe_highlight"/>
                    <button type="object" name="reject_claim" states="draft" string="Reject" class="oe_highlight"/>
                    <button type="object" name="set_to_draft" string="Set to Draft" class="oe_highlight"
                        attrs="{'invisible':[('state','not in',['approve','reject'])]}" />
                    <button type="object" name="process_claim" string="Validate" class="oe_highlight"
                        attrs="{'invisible':[('state','!=','process')]}"/>
                    <button type="object" name="action_claim_reject_process_ppts" string="Reject" class="oe_highlight"
                        attrs="{'invisible':[('state','!=','process')]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,approve,process,close"/>
                </header>
                <sheet string="Claims">
                    <group name='invisible_fields' invisible="1">
                        <field name="new_sale_id"/>
                        <field name="parent_partner_id"/>
                        <field name="refund_invoice_ids"/>
                        <field name="to_return_picking_ids"/>
                        <field name="rma_send"/>
                        <field name="internal_picking_id"/>
                        <field name="move_product_ids"/>
                        <field name="return_picking_id"/>
                        <field name="is_return_internal_transfer"/>
                        <field name="claim_lot_ids"/>
                    </group>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" name="show_return_picking" type="object" icon="fa-truck"
                            attrs="{'invisible': ['|', ('return_picking_id', '=', False), ('state', 'in', ['draft'])]}">
                            <span class="o_stat_text">Receipt</span>
                        </button>
                        <button class="oe_stat_button" name="show_delivery_picking" type="object" icon="fa-truck"
                            attrs="{'invisible': [('to_return_picking_ids', '=', [])]}">
                            <span class="o_stat_text">Deliveries</span>
                        </button>
                        <button class="oe_stat_button" name="act_supplier_invoice_refund_ppts" icon="fa-money"
                            type="object" attrs="{'invisible':[('refund_invoice_ids', '=', [])]}">
                            <span class="o_stat_text">Refund Invoices</span>
                        </button>
                        <button class="oe_stat_button" name="act_new_so_ppts" type="object" icon="fa-usd"
                            attrs="{'invisible':[('new_sale_id', '=', False)]}" context="{'so_id': new_sale_id}" >
                            <span class="o_stat_text">Sale Order</span>
                        </button>
                        <button class="oe_stat_button" name="show_internal_transfer" type="object" icon="fa-truck"
                                attrs="{'invisible':[('is_return_internal_transfer','=',False)]}">
                            <span class="o_stat_text">Internal Transfer</span>
                        </button>
                        <button class="oe_stat_button" name="action_view_repair_orders" icon="fa-wrench" type="object"
                            attrs="{'invisible': [('repairs_count', '=', 0)]}">
                            <field name="repairs_count" string="Repairs" widget="statinfo"/>
                        </button>
                    </div>
                    <h1>
                        <field name="code" class="oe_inline" readonly="1"/>
                    </h1>
                    <group>
                        <group attrs="{'readonly': [('state', '!=', 'draft')]}">
                            <field name="name"/>
                            <field name="user_id" widget="many2one_avatar_user"/>
                            <field name="section_id"/>
                            <field name="is_rma_without_incoming"/>
                            <field name="rma_support_person_id" domain="[('type', '=', 'contact'), ('parent_id', '=?', parent_partner_id)]"
                                options="{'no_quick_create': True, 'no_create_edit': True, 'no_open': True}"/>
                        </group>
                        <group>
                            <field name="date" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="priority" attrs="{'readonly':[('state','!=','draft')]}" widget="priority"/>
                            <field name="date_deadline" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <button name="create_contact_partner" type="object" string="Add Contact Person" attrs="{'invisible': [('state', '=', 'close')]}"/>
                        </group>

                        <group string="Ticket Details" name="ticket_details">
                            <field name="parent_ticket_id" readonly="1" attrs="{'invisible': [('parent_ticket_id', '=', False)]}"/>
                            <field name="child_ticket_id" readonly="1" attrs="{'invisible': [('child_ticket_id', '=', False)]}"/>
                            <field name="team_id" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="reject_message_id" readonly="1" attrs="{'invisible':[('state', '!=', 'reject')]}" options='{"no_open": True}'/>
                    </group>
                    <notebook>
                        <page string="RMA Details" name="rma_details">
                            <group>
                                <group>
                                    <field name="picking_id" context="{'rma_model': True}" required="1"
                                           attrs="{'readonly': [('state', '!=', 'draft')]}"
                                           options="{'no_quick_create': True, 'no_create_edit': True, 'no_open': True}"/>
<!--                                    <field name="picking_id" context="{'rma_model': True}" required="1" attrs="{'readonly': [('state', '!=', 'draft')]}"-->
<!--                                        domain="['&amp;', ('picking_type_code', '=', 'outgoing'), '&amp;', ('state', '=', 'done'), '|', ('sale_id', '!=', False), ('rma_sale_id', '!=', False)]" options="{'no_quick_create': True, 'no_create_edit': True, 'no_open': True}"/>-->
                                    <field name="partner_id" string="Partner" required="1" attrs="{'readonly': [('state', '!=', 'draft')]}"
                                        options="{'no_quick_create': True, 'no_create_edit': True, 'no_open': True}"/>
                                    <field name="email_from" widget="email" required="1" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                    <field name="partner_delivery_id" required="1" domain="[('type', '=', 'delivery'), ('parent_id', '=?', parent_partner_id)]"
                                        attrs="{'readonly': [('state', '!=', 'draft')]}" options="{'no_quick_create': True,'no_create_edit': True,'no_open': True}" />
                                </group>
                                <group>
                                    <field name="sale_id" readonly="1" force_save="1"/>
                                    <field name="partner_phone" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                    <field name="location_id" attrs="{'readonly':[('state','!=','draft')]}" domain="[('return_location', '=', True)]"
                                        options="{'no_quick_create': True, 'no_create_edit': True, 'no_open': True}"/>
                                    <button name="add_delivery_address" type="object" string="Add Delivery Address" attrs="{'invisible': [('state', '=', 'close')]}"/>
                                </group>
                            </group>

                                <separator name='claim_line_ids' colspan="2" string="RMA Lines"/>
                                <field name="claim_line_ids" mode="tree" nolabel="1">
                                    <tree editable="bottom" create="0" edit="true">
                                        <field name="product_id" options="{'no_quick_create': True, 'no_create_edit': True}" domain="[('id', 'in', parent.move_product_ids)]"
                                            attrs="{'readonly': [('parent.state', 'not in', ['draft'])], 'required': [('parent.state', 'in', ['draft'])]}"/>
                                        <field name="done_qty" attrs="{'readonly': [('parent.state', '!=', False)]}"/>
                                        <field name="quantity" attrs="{'readonly': [('parent.state', 'not in', ['draft'])], 'required': [('parent.state', 'in', ['draft'])]}"/>
                                        <field name="rma_reason_id" attrs="{'readonly': [('parent.state', 'not in', ['draft'])], 'required': [('parent.state', 'in', ['draft'])]}"/>
                                        <field name="return_qty" readonly="True"/>
                                        <field name="claim_type" force_save="1"
                                            attrs="{'readonly': [('parent.state', 'not in', ['process'])], 'required': [('parent.state', 'in', ['process'])]}"/>
                                        <field name="serial_lot_ids" widget="many2many_tags" groups="stock.group_production_lot"
                                            domain="[('product_id',  '=', product_id), ('id',  'in', parent.claim_lot_ids)]" options="{'no_create_edit': True}"
                                            attrs="{'column_invisible': ['|', ('parent.claim_lot_ids', '=', []), ('parent.state', 'in', ['process', 'close'])], 'readonly': [('parent.state', 'in', ['close'])]}"/>
                                        <button name="action_claim_refund_process_ppts" icon="fa-cogs" title="Set product to be replace" type="object"
                                            attrs="{'invisible': ['|', ('parent.state', 'not in', ['process', 'close']), ('claim_type', '!=', 'replace_other_product')]}"/>
                                        <field name="move_id" invisible="1"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <group>
                                                <field name="product_id"/>
                                                <field name="claim_type"/>
                                            </group>
                                            <group>
                                                <field name="done_qty"/>
                                                <field name="quantity"/>
                                            </group>
                                        </group>
                                    </form>
                                </field>

                            <div>
                                <separator name='description' string="RMA Note" colspan="4"/>
                                <field name="description" colspan="4"/>
                            </div>
                        </page>
                        <page string="Follow Up" name="followup">
                            <group name="action" string="Actions">
                                <group>
                                    <field name="date_action_next"/>
                                    <field name="action_next"/>
                                </group>
                            </group>
                            <group name="date" string="Dates" groups="base.group_no_one">
                                <group>
                                    <field name="create_date"/>
                                    <field name="date_closed" invisible="1"/>
                                    <field name="write_date"/>
                                </group>
                            </group>
                            <group name="root_causes" string="Root Causes">
                                <field name="cause" colspan="2" nolabel="1"/>
                            </group>
                            <group name="resolution_action" string="Resolution Actions">
                                <group><field name="type_action"/></group>
                                <field name="resolution" colspan="2" nolabel="1" placeholder="Action Description..."/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="crm_claims_ppts_calendar_view">
        <field name="name">Claims Actions</field>
        <field name="model">crm.claim.ppts</field>
        <field name="arch" type="xml">
            <calendar string="Claims" date_start="date_action_next" color="user_id">
                <field name="name"/>
            </calendar>
        </field>
    </record>

    <record id="view_crm_case_claims_filter_ppts" model="ir.ui.view">
        <field name="name">CRM - Claims Search</field>
        <field name="model">crm.claim.ppts</field>
        <field name="arch" type="xml">
            <search string="Search Claims">
                <field name="name" string="Claims"/>
                <field name="partner_id" filter_domain="[('partner_id', 'child_of', self)]"/>
                <field name="user_id"/>
                <filter string="Unassigned Claims" domain="[('user_id', '=', False)]" name="Unassigned_Claims"/>
                <group expand="0" string="Group By">
                    <filter string="Partner" name="partner" help="Partner" context="{'group_by':'partner_id'}"/>
                    <filter string="Responsible" name="user" help="Responsible User" context="{'group_by':'user_id'}"/>
                    <filter string="State" name="state" context="{'group_by':'state'}"/>
                    <filter string="Claim Month" name="claim_month" help="Claim Date by Month" context="{'group_by':'date'}"/>
                    <filter string="Deadline" name="deadline" context="{'group_by':'date_deadline'}"/>
                </group>
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="crm_claim_ppts_action">
        <field name="name">RMA</field>
        <field name="res_model">crm.claim.ppts</field>
        <field name="view_mode">tree,calendar,form</field>
        <field name="context">{"search_default_user_id": uid}</field>
        <field name="search_view_id" ref="view_crm_case_claims_filter_ppts"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Record and track your customers' RMA.
            </p><p>
                RMA may be linked to a sales order or a
                lot.You can send emails with attachments and keep the full history for a RMA
                (emails sent, intervention type and so on). RMA may automatically be linked to
                an email address using the mail gateway module.
            </p>
        </field>
    </record>

    <menuitem id="menu_crm_claim_ppts_after_sale" name="After-Sale Services" sequence="11"
        parent="sale.sale_menu_root" groups="rma_ppts.group_rma_user_ppts"/>

    <menuitem id="menu_crm_claim_ppts" name="RMA" action="crm_claim_ppts_action" sequence="1"
        parent="menu_crm_claim_ppts_after_sale" groups="rma_ppts.group_rma_user_ppts"/>

</odoo>
