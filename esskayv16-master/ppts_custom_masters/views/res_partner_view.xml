    <!--  To create region Search View -->
    <record id="region_filter_view" model="ir.ui.view">
        <field name="name">region.filter.view</field>
        <field name="model">customer.region</field>
        <field name="arch" type="xml">
            <search string="Name">
                <field name="name" filter_domain="['|',('name', 'ilike', self), ('sequence', 'ilike', self)]"/>
                <group expand="0" string="Group By">
                    <filter string="Name" name="name" context="{'group_by':'name'}"/>
                    <filter string="sequence" name="code" context="{'group_by':'sequence'}"/>
                </group>
            </search>
        </field>
    </record>

