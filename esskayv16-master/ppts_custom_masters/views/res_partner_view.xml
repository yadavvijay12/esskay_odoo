<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--Inherited fields-->
    <record id="res_partner_custom_fields_inherit_geoloc" model="ir.ui.view">
        <field name="name">res.partner.custom.fields.inherit.geoloc</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base_geolocalize.view_crm_partner_geo_form"/>
        <field name="arch" type="xml">

            <xpath expr="//page[@name='geo_location']" position="attributes">
                <attribute name="string">GEO Location</attribute>
            </xpath>
            <xpath expr="//page[@name='geo_location']/group/group" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//page[@name='geo_location']" position="inside">
                <button attrs="{'invisible': ['|', ('partner_latitude', '!=', 0), ('partner_longitude', '!=', 0)]}"
                        icon="fa-gear" string="Compute based on address" title="Compute Localization"
                        name="geo_localize" type="object" class="btn btn-link p-0"/>
                <button attrs="{'invisible': [('partner_latitude', '=', 0), ('partner_longitude', '=', 0)]}"
                        icon="fa-refresh" string="Refresh" title="Refresh Localization"
                        name="geo_localize" type="object" class="btn btn-link p-0"/>
                <group>
                    <group>
                        <span>Lat :
                            <field name="partner_latitude" nolabel="1" class="oe_inline"/>
                        </span>
                    </group>
                    <group>
                        <span>Long :
                            <field name="partner_longitude" nolabel="1" class="oe_inline"/>
                        </span>
                    </group>
                </group>
            </xpath>
        </field>
    </record>

    <record id="res_partner_custom_fields_inher" model="ir.ui.view">
        <field name="name">res.partner.custom.fields.inher</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='contact_addresses']" position="after">
                <field name="is_customer_account_required" invisible="1"/>
                <field name="customer_account_id" invisible="1"/>
                <page string="Stock Checking Process" attrs="{'invisible':[('customer_account_id','!=',False)]}">
                    <field name="stock_checking_process_ids">
                        <tree string="Stock Checking Process" editable="bottom">
                            <field name="request_type"/>
                            <field name="stock_request_type"/>
                        </tree>
                    </field>
                </page>
            </xpath>

            <xpath expr="//sheet" position='before'>
                <header>
                    <button name="service_ticket_creation" string="Create Service Request" type="object"
                            class="oe_highlight"/>
                    <button name="ticket_creation" string="Create Ticket" type="object"
                            class="oe_highlight"/>
                </header>
            </xpath>
            <field name="vat" position="after">
                <field name="is_block_partner" readonly="1"/>
            </field>
            <xpath expr="//page[@name='internal_notes']" position='attributes'>
                <attribute name='invisible'>1</attribute>
            </xpath>
            <xpath expr="//field[@name='category_id']" position="after">
                <field name="fax_no"/>
            </xpath>

            <xpath expr="//field[@name='city']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//div[hasclass('o_address_format')]/field[@name='city']" position="after">
                <field name="city_id" class="o_address_city" placeholder="City"/>
            </xpath>
            <xpath expr="//field[@name='child_ids']/form/sheet/group/group/div/div/field[@name='city']"
                   position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='child_ids']/form/sheet/group/group/div/div/field[@name='city']"
                   position="after">
                <field name="city_id" class="o_address_city" placeholder="City"/>
            </xpath>
            <!--Pages-->
            <xpath expr="//field[@name='company_name']" position="attributes">
                <attribute name="placeholder">Customer Name...</attribute>
            </xpath>
            <xpath expr="//page[@name='sales_purchases']" position="after">
                <page string="Assets" name="asset">
                    <field name="stock_lot_ids" nolabel="1" readonly="1">
                        <tree string="Assets" editable="bottom" create="0" edit="0" delete="0">
                            <field name="name"/>
                            <field name="product_id"/>
                        </tree>
                    </field>
                </page>

                <page string="Tickets" name="tickets">
                    <field name="ticket_ids" nolabel="1" readonly="1">
                        <tree string="Service Tickets" editable="bottom" create="0" edit="0" delete="0">
                            <field name="name"/>
                            <field name="partner_id"/>
                            <field name="product_name"/>
                            <field name="custom_product_serial"/>
                        </tree>
                    </field>
                </page>

                <page string="Contracts" name="contracts">
                </page>

                <page string="Loaners" name="loaners">
                    <field name="loaner_ids" nolabel="1" readonly="1">
                        <tree string="Loaner Product">
                            <field name="name"/>
                            <field name="company_id"/>
                            <field name="partner_id"/>
                            <field name="date_order"/>
                        </tree>
                        <form>
                            <group>
                                <group>
                                    <field name="name"/>
                                    <field name="company_id"/>
                                    <field name="partner_id"/>
                                    <field name="date_order"/>
                                </group>
                            </group>
                        </form>
                    </field>
                </page>

                <page string="Dealer &amp; Distributor">
                    <field name="dealer_distributer_ids">
                        <tree string="Dealer &amp; Distributor" editable="bottom" name="dealer_distributor">
                            <field name="dealer_id" options='{"no_open": True, "no_create": True}'/>
                        </tree>
                    </field>
                </page>
                <page string="Branches" attrs="{'invisible': [('custom_company_type', '!=', 'branch')]}">
                    <field name="contact_branch_ids" readonly="1" delete="0">
                        <tree>
                            <field name="name"/>
                        </tree>
                    </field>
                </page>
                <page string="Attachment">
                    <field name="customer_attachments" widget="many2many_binary" string="Attach a file"/>
                </page>
            </xpath>
            <!--End Pages-->
            <!--fields-->
            <xpath expr="//form/sheet/div[hasclass('oe_title')]/h1" position="after">
                <group string="Basic Informations" name="basic_info" style="font-size:small;">
                </group>
            </xpath>
            <xpath expr="//group[@name='basic_info']" position="before">
                <h3>
                    <group>
                        <field name="ex_customer_type"/>
                        <field name="parent_customer_id"
                               attrs="{'required': [('custom_company_type', '=', 'branch')]}"/>
                        <field name="customer_account" invisible="1"/>
                        <field name="is_customer_account_required" invisible="1"/>
                        <field name="customer_account_id"
                               attrs="{'required': [('ex_customer_type','=', 'create_customer')], 'invisible': [('ex_customer_type','=', 'create_account')]}"/>
                        <field name="customer_type_partner"
                               attrs="{'invisible': [('customer_account_id','!=', False)]}"/>

                    </group>
                </h3>
            </xpath>
            <xpath expr="//field[@name='vat']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='vat']" position="after">
                <field name="vat" string="TAX ID"/>
                <field name="gst_no"/>
                <field name="pan_number"/>
            </xpath>
            <xpath expr="//page[@name='internal_notes']" position="attributes">
            </xpath>
            <xpath expr="//div[@name='button_box']" position="after">
                <widget name="web_ribbon" title="Blocked" bg_color="bg-danger"
                        attrs="{'invisible': [('is_block_partner', '!=', 'blocked')]}"/>
            </xpath>

            <xpath expr="//form/sheet/group" position="after">

                <group name="internal_notes" string="Internal Notes" style="font-size:small;" colspan="4">
                    <group>
                        <br/>
                        <br/>
                        <field name="comment" placeholder="Internal notes..."/>
                    </group>
                </group>
                <group name="properties_grp" string="Properties" style="font-size:small;" colspan="4">
                </group>
                <field name="properties" nolabel="1" columns="2" hideKanbanOption="1"/>
            </xpath>

            <xpath expr="//form/sheet/group" position="after">
                <group string="Other Informations" name="other_info" style="font-size:small;" colspan="4">
                    <group>
                        <field name="id" readonly="1" string="Customer ID"/>
                        <field name="customer_id_alias"/>
                        <field name="customer_type"/>
                        <field name="customer_region"/>
                        <field name="target_group"/>
                        <field name="tier_tier"/>
                        <field name="reference"/>
                        <field name="customer_group"/>
                        <field name="location_id"/>

                    </group>
                    <group>
                        <field name="hospital_name"/>
                        <field name="surgeon_name"/>
                        <field name="description"/>
                        <field name="secondary_contact_number"/>
                        <!--                After Esskay team testing, they told us to remove those three fields. File name : Test Results-From Esskay, line number31-->
                        <!--<field name="branch_id"/>-->
                        <!--                        <field name="branch_actual_id" readonly="1"/>-->
                        <!--                        <field name="branch_id_alias" readonly="1"/>-->
                        <field name="vendor_code"/>
                        <field name="c_number"/>
                        <field name="d_number"/>
                    </group>
                </group>
            </xpath>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button" type="object" name="action_view_parent_tickets" icon="fa-book"
                        string="Parent Tickets" attrs="{'invisible': [('parent_count', '=', 0)]}">
                    <field string="Parent Tickets" name="parent_count" widget="statinfo"/>
                </button>
                <button class="oe_stat_button" type="object" name="action_view_child_tickets" icon="fa-lg fa-save"
                        string="Child Tickets" attrs="{'invisible': [('child_count', '=', 0)]}">
                    <field string="Child Tickets" name="child_count" widget="statinfo"/>
                </button>
                <button class="oe_stat_button" type="object" name="action_view_service_requests" icon="fa-usd"
                        string="Service Requests">
                    <field string="Service Requests" name="service_count" widget="statinfo"/>
                </button>
                <button class="oe_stat_button" type="object" name="action_view_reports" icon="fa-tasks"
                        string="Reports">
                </button>
            </xpath>
            <xpath expr="//field[@name='company_type']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='company_type']" position='after'>
                <field name="custom_company_type" widget="radio" options="{'horizontal': true}"/>
            </xpath>
        </field>
    </record>

