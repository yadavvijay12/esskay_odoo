        <field name="sequence" eval="3"/>
        <field name="view_mode">kanban</field>
        <field name="view_id" ref="service_request_view_kanban"/>
        <field name="act_window_id" ref="action_service_request"/>
    </record>

    <record id="action_service_request_approval" model="ir.actions.act_window">
        <field name="name">Waiting for Approval Request</field>
        <field name="res_model">service.request</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="search_view_id" ref="service_request_search_view"/>
        <field name="view_id" ref="service_request_tree_view"/>
        <field name="domain">[('state','=','waiting_for_approval'), ('approver_ids.user_id', '=',
            uid),('approver_ids.state', 'in', ('rejected','hold','new'))]
        </field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to Create a New Record.
            </p>
        </field>
    </record>

    <record id="service_ticket_approval_tree_view" model="ir.ui.view">
        <field name="name">service.ticket.approval.tree</field>
        <field name="model">service.ticket.approval</field>
        <field name="arch" type="xml">
            <tree>
                <field name="user_id"/>
                <field name="require_opt"/>
                <field name="state"/>
                <field name="approved_on"/>
                <field name="reject_reason"/>
                <field name="rejected_on"/>
                <field name="hold_reason"/>
                <field name="hold_on"/>
            </tree>
        </field>
    </record>

    <!--    Overview Kanban view-->

    <record id="overview_service_request_view_kanban" model="ir.ui.view">
        <field name="name">request.type.kanban</field>
        <field name="model">request.type</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_small_column" create="false" delete="false">
                <field name="team_id"/>
                <field name="ticket_type"/>
                <field name="assigned_count"/>
                <field name="unassigned_count"/>
                <field name="closed_count"/>
                <field name="rejected_count"/>

                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card ">
                            <div class="container o_kanban_card_content">
                                <div style="font-size:15px;margin-top:5%;">
                                    <h1 class="o_kanban_record_title">
                                        <field name="name"/>
                                    </h1>
                                </div>
                                <div class="o_kanban_manage_button_section" t-if="!selection_mode">
                                    <a class="o_kanban_manage_toggle_button" href="#">
                                        <i class="fa fa-ellipsis-v" role="img" aria-label="Manage" title="Manage"/>
                                    </a>
                                </div>
                                <div class="row my-4">
                                    <div class="col-4 o_kanban_primary_left ">

                                        <button name="overview_ticket_request_type" type="object"
                                                class="btn btn-info oe_kanban_action oe_kanban_action_button">
                                            TICKETS
                                        </button>
                                    </div>

                                    <div class="col-6 o_kanban_primary_right ">

                                        <div role="menuitem">
                                            <a style=" color: #148a9c; font-weight: 500; float: right;" name="get_closed_tickets"

                                               type="object">Tickets Closed
                                            </a>
                                        </div>

                                        <div role="menuitem">
                                            <a style=" color: #148a9c; font-weight: 500; float: right;" name="get_rejected_tickets"

                                               type="object">Rejected Tickets
                                            </a>
                                        </div>
                                    </div>
                                    <div class="col-2 o_kanban_primary_right ">
                                        <div style="padding-left:0%;">
                                            <span class="o_value">
                                                <t t-esc="record.closed_count.value"/>
                                            </span>
                                            <br/>
                                        </div>
                                        <div style="padding-left:0%;">
                                            <span class="o_value">
                                                <t t-esc="record.rejected_count.value"/>
                                            </span>
                                            <br/>
                                        </div>
                                    </div>
                                </div>

                                <div class="row mb-2">
                                    <div class="col-lg-6" style="border-right:1px solid;">
                                        <div style=" padding-left: 13%; ">
                                            <span class="o_value">
                                                <t t-esc="record.assigned_count.value"/>
                                            </span>
                                            <br/>
                                        </div>


                                        <div style="font-size:14px;">

                                            <div role="menuitem">
                                                <a style=" color: #148a9c; font-weight: 500; " name="assigned_tickets"
                                                   context="{'is_assigned': True}"
                                                   type="object">Assigned
                                                </a>
                                            </div>

                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div style=" padding-left: 23%; ">
                                            <span class="o_value">
                                                <t t-esc="record.unassigned_count.value"/>
                                            </span>
                                            <br/>
                                        </div>
                                        <div style="font-size:14px;">
                                            <div role="menuitem">
                                                <a style=" color: #148a9c; font-weight: 500; " name="unassigned_tickets"
                                                   context="{'is_unassigned': True}"
                                                   type="object">Unassigned
                                                </a>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                            <div class="dropdown-menu" style="overflow:hidden;width:7%;" role="menu">

                                <div t-if="widget.editable" class="o_kanban_card_manage_settings row">

                                    <div role="menuitem" class="col-lg-12">
                                        <a class="dropdown-item" role="menuitem" type="edit">Configuration</a>
                                    </div>
                                </div>
                            </div>
                            <div class="oe_clear"/>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

</odoo>
