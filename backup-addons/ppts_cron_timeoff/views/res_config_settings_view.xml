<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit" model="ir.ui.view">
        <field name="name">Add partner_names_order config parameter</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='companies']" position='before'>

                <h2>Working Days</h2>
                <div class="row mt16 o_settings_container" id="working_days_config">
                    <div class="col-12 col-lg-12 o_setting_box">
                        <div class="">
                            <field name="Sunday"/>
                            <label for="Sunday"/>
                            <field name="Monday" style="margin-left:15px;"/>
                            <label for="Monday"/>
                            <field name="Tuesday" style="margin-left:15px;"/>
                            <label for="Tuesday"/>
                            <field name="Wednesday" style="margin-left:15px;"/>
                            <label for="Wednesday"/>
                            <field name="Thursday" style="margin-left:15px;"/>
                            <label for="Thursday"/>
                            <field name="Friday" style="margin-left:15px;"/>
                            <label for="Friday"/>
                            <field name="Saturday" style="margin-left:15px;"/>
                            <label for="Saturday"/>
                        </div>
                    </div>
                </div>
                
            </xpath>
        </field>
    </record>
</odoo>
