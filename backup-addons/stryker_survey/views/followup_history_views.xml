<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="followup_history_view_form" model="ir.ui.view">
        <field name="name">followup_history.view.form</field>
        <field name="model">followup.history</field>
        <field name="arch" type="xml">
            <form string="Followup History">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="customer_id" />
                        <field name="survey_id" />
                        <field name="followup_date" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="followup_history_view_tree" model="ir.ui.view">
        <field name="name">followup_history.view.tree</field>
        <field name="model">followup.history</field>
        <field name="arch" type="xml">
            <tree string="Followup History">
                <field name="name" />
                <field name="customer_id" />
                <field name="survey_id" />
                <field name="followup_date" />
            </tree>
        </field>
    </record>

    <record id="followup_history_action" model="ir.actions.act_window">
        <field name="name">Followup History</field>
        <field name="res_model">followup.history</field>
        <field name="view_mode">tree</field>
    </record>
</odoo>
<!-- followup_history form view -->
